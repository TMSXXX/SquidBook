{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "squid_back",
          "sidecar": false
        }
      ]
    },
    
    "shell:allow-open",
    "dialog:allow-save",
    "dialog:allow-open",
    "dialog:allow-message",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "share:allow-share-file",
    "share:default",
    "fs:allow-appdata-write",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPDATA/*" }
      ]
    }
  ],
  "plugins": {
    "dialog": {
      "permissions": [
        "allow-save",
        "allow-open"
      ]
    },
    "fs": {
      "permissions": [
        "allow-read-text-file",
        "allow-write-text-file"
      ]
    },
    "share": {
      "permissions": [
        "allow-share-file"  
      ]
    }
  }
}